# Alloy Connectivity API Configuration
# (Run `uv run python scripts/bootstrap_demo.py --help` to populate these automatically.)
ALLOY_API_KEY=your_api_key_here
ALLOY_API_VERSION=2025-09

# User ID (create the user first via Connectivity API)
ALLOY_USER_ID=user_xxxxx

# Credential IDs
SHOPIFY_CREDENTIAL_ID=cred_shopify_xxxxx
SLACK_CREDENTIAL_ID=cred_slack_xxxxx

# Connector IDs
SHOPIFY_CONNECTOR_ID=shopify
SLACK_CONNECTOR_ID=slack

# Slack Configuration
SLACK_CHANNEL_ID=C01234567890

# Business Logic
ORDER_VALUE_THRESHOLD=500.0

# Optional: Shopify store domain
SHOPIFY_STORE_DOMAIN=your-store-name

# Polling interval
CHECK_INTERVAL_SECONDS=300
